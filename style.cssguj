body {
    margin: 0;
    font-family: Arial, sans-serif;
    background: #f5f7fa;
    display: flex;
}

/* Sidebar */
.sidebar {
    width: 260px;
    height: 100vh;
    padding: 20px;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(12px);
    border-right: 1px solid #ddd;
    position: fixed;
}

.sidebar h2 {
    margin: 0 0 20px;
    font-size: 22px;
}

.sidebar input {
    width: 100%;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #bbb;
    margin-bottom: 20px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.sidebar li {
    background: white;
    padding: 12px;
    border-radius: 12px;
    margin-bottom: 12px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    cursor: pointer;
    transition: 0.2s;
}

.sidebar li:hover {
    transform: scale(1.03);
}

/* Main Content */
.content {
    margin-left: 280px;
    padding: 40px;
    width: calc(100% - 280px);
}

.welcome-card {
    background: white;
    padding: 30px;
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.content-box {
    margin-top: 30px;
    padding: 30px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    opacity: 0;
    transform: translateY(20px);
    transition: 0.4s ease;
}

.content-box.show {
    opacity: 1;
    transform: translateY(0);
}

.hidden {
    display: none;
}
